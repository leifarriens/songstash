{
  "name": "songstash",
  "version": "0.0.0",
  "description": "Quick music portfolios for artists.",
  "scripts": {
    "dev:web": "pnpm --filter @songstash/web dev",
    "dev:mobile": "pnpm --filter @songstash/mobile dev",
    "lint": "pnpm --filter @songstash/* lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "spellcheck": "pnpm --filter @songstash/* spellcheck",
    "postinstall": "pnpm --filter @songstash/database db:generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leifarriens/songstash.git"
  },
  "author": "Leif Arriens",
  "bugs": {
    "url": "https://github.com/leifarriens/songstash/issues"
  },
  "homepage": "https://github.com/leifarriens/songstash#readme",
  "devDependencies": {
    "prettier": "^2.8.2"
  }
}
